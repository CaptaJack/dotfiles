#!/bin/sh

# ask for folder
read -p "Folder name > " folder_name
# ask for extensions
read -p "Extensions name (space separated) > " extensions

if [ -z "$folder_name" ]; then
  folder_name=$(date +%s | md5 | base64 | head -c 5)
fi
# if a folder is not supplied randomize one

# move to tmp
cd /tmp

# create the folder
mkdir $folder_name
cd $folder_name

files=""

# get all extension passed as arguments
for extension in $extensions
do
   files+="file.$extension "
done

# if files exists
if [ -n "$files" ]; then
  # touch all files
  touch $files

  # open all files
  vim $files
else

  # open vim in folder
  vim
fi

